<%- include('includes/header'); -%>
<body>

  <%- include('includes/navbar'); -%>

  <div id="main">
    <div class="container">
      <h1>Consulta: <%= dados._id %></h1>
      <hr>
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="name">Paciente:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= dados.name %>">
        </div>

        <div class="form-group col-md-6">
          <label for="inputEmail4">CPF:</label>
          <input type="text" class="form-control" id="cpf" name="cpf" value="<%= dados.cpf %>">
        </div>

        <div class="form-group col-md-6">
          <label for="email">Email:</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= dados.email %>">
        </div>

        <% if(dados.finished == false) { %> 
        <div class="btn-alinha-direita">
          <form action="/finish" method="POST">
            <input type="hidden" name="id" id="id" value="<%= dados.id %>">
            <button type="submit" class="btn btn-success">Finalizar Consulta</button>
          </form>
        </div>
        <% } %>
       
      </div>
    </div>
  </div>

</body>
<%- include('includes/footer'); -%>